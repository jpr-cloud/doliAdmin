# SSH Config for SellYourSaas
# Generated by Ansible

# Configuration for deployment server access
Host {{ deployment_server_ip | default('ip.server.deployment') }}
    IdentityFile /home/admin/.ssh/id_rsa_sellyoursaas
    User admin
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Configuration for GitHub access
Host github.com
    IdentityFile /home/admin/.ssh/id_rsa_sellyoursaas
    User git
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Configuration for master server access (only for deployment servers)
{% if inventory_hostname in groups['deploy'] %}
Host {{ master_server_ip | default('ip.server.master') }}
    IdentityFile /home/admin/.ssh/id_rsa_sellyoursaas
    User admin
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
{% endif %}

# Default configuration
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
    ConnectTimeout 10
