# /etc/exports: the access control list for filesystems which may be exported
#               to NFS clients.  See exports(5).
#
# Example for NFSv2 and NFSv3:
# /srv/homes       hostname1(rw,sync,no_subtree_check) hostname2(ro,sync,no_subtree_check)
#
# Example for NFSv4:
# /srv/nfs4        gss/krb5i(rw,sync,fsid=0,crossmnt,no_subtree_check)
# /srv/nfs4/homes  gss/krb5i(rw,sync,no_subtree_check)
#

# SellYourSaas NFS exports
{% if deployment_servers is defined %}
{% for server in deployment_servers %}
/home/admin/wwwroot/dolibarr_documents/sellyoursaas {{ server }}(ro,no_root_squash,sync,no_subtree_check)
{% endfor %}
{% else %}
# Default: Use deployment server IP from variables
/home/admin/wwwroot/dolibarr_documents/sellyoursaas {{ deployment_server.ip | default('i.p.deployment.server1') }}(ro,no_root_squash,sync,no_subtree_check)
{% endif %}
